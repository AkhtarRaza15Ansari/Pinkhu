<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/llinear"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >
    <LinearLayout
        android:id="@+id/own"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="end"
        >

            <LinearLayout
                android:id="@+id/body"
                android:background="@drawable/in_message_bg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="10dp"
                android:gravity="end"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Name"
                    android:textSize="10dp"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/message"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Message"
                    android:textSize="18dp"
                    android:textStyle="bold" />
            </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/own_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="end"
        >

        <LinearLayout
            android:id="@+id/body_image"
            android:background="@drawable/in_message_bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:gravity="end"
            android:orientation="vertical">

            <TextView
                android:id="@+id/name_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name"
                android:textSize="10dp"
                android:textStyle="bold" />
            <ImageView
                android:id="@+id/message_own_image"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:scaleType="centerCrop"
                />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/other"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="start"
        >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="10dp"
                android:gravity="start"
                android:background="@drawable/out_message_bg"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/name_other"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Name"
                    android:textSize="10dp"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/message_other"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Message"
                    android:textSize="18dp"
                    android:textStyle="bold" />
            </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/other_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="start"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:gravity="start"
            android:background="@drawable/out_message_bg"
            android:orientation="vertical">

            <TextView
                android:id="@+id/name_other_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name"
                android:textSize="10dp"
                android:textStyle="bold" />
            <ImageView
                android:id="@+id/message_other_image"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:scaleType="centerCrop"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>