<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        style="@style/myAppTheme"
        tools:context="com.qualixam.pinkhu.DetailsPage">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/myAppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/myAppTheme.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >
                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="200dp"
                            android:orientation="vertical">
                            <ImageView
                                android:id="@+id/mainimage"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="fitXY"/>
                        </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:layout_gravity="bottom"
                        android:gravity="bottom"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:orientation="horizontal"
                            android:layout_above="@+id/items"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:layout_height="wrap_content">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.2"
                                android:orientation="vertical">
                                <TextView
                                    android:id="@+id/name"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/white"
                                    android:textSize="25dp"
                                    android:text="Name will come here"/>
                                <TextView
                                    android:id="@+id/area"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/white"
                                    android:textSize="16dp"
                                    android:text="Area will come here"/>
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">
                                    <TextView
                                        android:id="@+id/circles"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textColor="@color/white"
                                        android:textSize="15dp"
                                        android:text="Circles will come here"/>
                                    <LinearLayout
                                        android:layout_width="01dp"
                                        android:layout_marginLeft="05dp"
                                        android:layout_marginRight="05dp"
                                        android:layout_height="match_parent"
                                        android:background="@color/white"/>
                                    <TextView
                                        android:id="@+id/lastupdate"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textColor="@color/white"
                                        android:textSize="12dp"
                                        android:text="Last Updated Now."/>
                                </LinearLayout>

                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="0.8"
                                android:orientation="vertical">
                                <TextView
                                    android:id="@+id/ratinggs"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="4.2"
                                    android:layout_gravity="center"
                                    android:textColor="@color/blue"
                                    android:textSize="22dp"
                                    android:drawableTint="@color/blue"
                                    android:drawableRight="@drawable/staric"
                                    />
                            </LinearLayout>

                        </LinearLayout>
                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_alignParentBottom="true"
                            android:layout_width="match_parent"
                            android:gravity="bottom"
                            android:layout_gravity="bottom"
                            android:id="@+id/items"
                            android:layout_marginTop="20dp"
                            android:layout_height="70dp">

                            <LinearLayout
                                android:id="@+id/call"
                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:layout_weight="0.20"
                                android:gravity="center"
                                android:layout_height="match_parent">
                                <ImageView
                                    android:layout_width="35dp"
                                    android:layout_height="35dp"
                                    android:tint="@color/green"
                                    android:src="@drawable/ic_call_white_24dp"/>

                            </LinearLayout>
                            <LinearLayout
                                android:id="@+id/bookmark"
                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:layout_weight="0.20"
                                android:gravity="center"
                                android:layout_height="match_parent"
                                >
                                <ImageView
                                    android:id="@+id/bookimageadd"
                                    android:layout_width="35dp"
                                    android:layout_height="35dp"
                                    android:tint="@color/blue"
                                    android:visibility="visible"
                                    android:src="@drawable/ic_bookmark_white_24dp"/>
                                <ImageView
                                    android:id="@+id/bookimagedelete"
                                    android:layout_width="35dp"
                                    android:layout_height="35dp"
                                    android:tint="@color/red"
                                    android:visibility="gone"
                                    android:src="@drawable/ic_bookmark_white_24dp"/>
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/white"
                                    android:gravity="center"
                                    android:singleLine="true"
                                    android:visibility="gone"
                                    android:text="Around you"/>
                            </LinearLayout>
                            <LinearLayout
                                android:id="@+id/allLocations"
                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:layout_weight="0.20"
                                android:gravity="center"
                                android:layout_height="match_parent">
                                <ImageView
                                    android:layout_width="35dp"
                                    android:layout_height="35dp"
                                    android:tint="@color/blue"
                                    android:src="@drawable/ic_add_location_white_24dp"/>
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:textColor="@color/white"
                                    android:singleLine="true"
                                    android:visibility="gone"
                                    android:text="Ambulance "/>
                            </LinearLayout>
                            <LinearLayout
                                android:id="@+id/writeareview"
                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:layout_weight="0.20"
                                android:gravity="center"
                                android:layout_height="match_parent">
                                <ImageView
                                    android:layout_width="35dp"
                                    android:layout_height="35dp"
                                    android:tint="@color/blue"
                                    android:src="@drawable/ic_border_color_white_24dp"/>
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:textColor="@color/white"
                                    android:singleLine="true"
                                    android:visibility="gone"
                                    android:text="Pharmacy"/>
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                    </FrameLayout>



                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/More"
                                android:padding="5dp"
                                android:textStyle="bold"
                                android:textColor="@color/black"
                                android:textSize="20dp"
                                />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:orientation="horizontal"
                            android:layout_height="wrap_content">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:orientation="vertical"
                                android:layout_weight="0.2"
                                android:layout_height="match_parent">
                                <LinearLayout
                                    android:orientation="horizontal"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">
                                    <TextView
                                        android:layout_weight="0.6"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="@string/Address"
                                        android:padding="5dp"
                                        android:textColor="@color/black"
                                        android:textSize="14dp"
                                        />
                                    <TextView
                                        android:id="@+id/completeAddress"
                                        android:layout_weight="0.4"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="001, Mars Apt, Jupiter Lane, Earth Apt."
                                        android:padding="5dp"
                                        android:gravity="start"
                                        android:textSize="12dp"
                                        />
                                </LinearLayout>
                                <LinearLayout
                                    android:orientation="horizontal"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">
                                    <TextView
                                        android:layout_weight="0.6"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="@string/ContactEmail"
                                        android:padding="5dp"
                                        android:textColor="@color/black"
                                        android:textSize="14dp"
                                        />
                                    <TextView
                                        android:id="@+id/email"
                                        android:layout_weight="0.4"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="akhtar15raza@gmail.com"
                                        android:padding="5dp"
                                        android:textSize="12dp"
                                        />
                                </LinearLayout>
                                <LinearLayout
                                    android:orientation="horizontal"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">
                                    <TextView
                                        android:layout_weight="0.6"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="@string/workinghours"
                                        android:padding="5dp"
                                        android:textColor="@color/black"
                                        android:textSize="14dp"
                                        />
                                    <TextView
                                        android:id="@+id/workinghours"
                                        android:layout_weight="0.4"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="www.google.com"
                                        android:padding="5dp"
                                        android:textSize="12dp"
                                        />
                                </LinearLayout>
                                <LinearLayout
                                    android:orientation="horizontal"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">
                                    <TextView
                                        android:layout_weight="0.6"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="@string/Website"
                                        android:padding="5dp"
                                        android:textColor="@color/black"
                                        android:textSize="14dp"
                                        />
                                    <TextView
                                        android:id="@+id/website"
                                        android:layout_weight="0.4"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="www.google.com"
                                        android:padding="5dp"
                                        android:textSize="12dp"
                                        />
                                </LinearLayout>
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    >
                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:textSize="14dp"
                                        android:padding="5dp"
                                        android:layout_weight="0.6"
                                        android:text="@string/Details"
                                        android:textColor="@color/black"
                                        />
                                    <TextView
                                        android:id="@+id/about"
                                        android:paddingRight="5dp"
                                        android:paddingLeft="5dp"
                                        android:layout_weight="0.4"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:textSize="12dp"
                                        android:text="@string/lorem"
                                        />
                                </LinearLayout>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:orientation="vertical"
                                android:layout_weight="0.8"
                                android:gravity="center"
                                android:layout_gravity="center"
                                android:layout_height="match_parent">
                                <TextView
                                    android:id="@+id/map"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="MAP"
                                    android:textStyle="bold"
                                    android:textSize="15dp"
                                    android:drawableTop="@drawable/ic_room_white_24dp"
                                    android:drawableTint="@color/red"/>
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:orientation="vertical"
                            android:layout_height="match_parent">

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="01dp"
                            android:layout_marginTop="10dp"
                            android:background="@color/light_black"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Ratings &amp; Reviews"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:textSize="20dp"
                            android:padding="5dp"/>

                        <LinearLayout
                            android:id="@+id/reviewsection"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:orientation="vertical">

                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </ScrollView>
    </LinearLayout>