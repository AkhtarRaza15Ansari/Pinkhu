    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    app:theme="@style/myAppTheme"
    android:layout_height="match_parent"
    tools:context="com.qualixam.pinkhu.MainActivity">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/black"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.qualixam.pinkhu.MainActivity">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/mainimage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
                <android.support.v7.widget.Toolbar
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:local="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/transparenta"
                    android:minHeight="?attr/actionBarSize"
                    local:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
                    local:popupTheme="@style/ThemeOverlay.AppCompat.Light"
                    />
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_alignParentBottom="true"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:id="@+id/cat1"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_weight="0.20"
                    android:gravity="center"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:tint="@color/white"
                        android:src="@drawable/ic_local_hospital_white_24dp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:singleLine="true"
                        android:textSize="12dp"
                        android:textColor="@color/white"
                        android:text="MedsCon"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/cat2"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_weight="0.20"
                    android:gravity="center"
                    android:layout_height="match_parent"
                    >
                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:tint="@color/white"
                        android:src="@drawable/ic_local_pharmacy_white_24dp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:singleLine="true"
                        android:textSize="12dp"
                        android:textColor="@color/white"
                        android:text="MedsShop"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/cat3"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_weight="0.20"
                    android:gravity="center"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:tint="@color/white"
                        android:src="@drawable/ic_local_shipping_white_24dp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:singleLine="true"
                        android:textSize="12dp"
                        android:text="MedRentals"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/cat4"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_weight="0.20"
                    android:gravity="center"
                    android:layout_height="match_parent">
